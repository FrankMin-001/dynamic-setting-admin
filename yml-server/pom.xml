<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>yml</artifactId>
        <groupId>com.smalldragon.yml</groupId>
        <version>1.0.0</version>
    </parent>

    <packaging>jar</packaging>

    <groupId>com.small.dragon</groupId>
    <artifactId>yml-server</artifactId>

    <dependencies>
        <dependency>
            <groupId>com.smalldragon.yml</groupId>
            <artifactId>yml-system-biz</artifactId>
        </dependency>
        <!-- 直接引入 API，避免无效的 biz POM 影响传递依赖 -->
        <dependency>
            <groupId>com.smalldragon.yml</groupId>
            <artifactId>yml-function-api</artifactId>
        </dependency>
        <!-- Thymeleaf 支持 -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-thymeleaf</artifactId>
        </dependency>
        <!-- Spring Boot DevTools for hot reload -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-devtools</artifactId>
            <version>${spring-boot.version}</version>
            <optional>true</optional>
        </dependency>
        <!--
            war 包部署说明：
            - 如果要用 java -jar 运行（Docker/K8s 推荐），保持默认配置（内嵌 Tomcat）
            - 如果要部署到外部 Tomcat，将 spring-boot-starter-tomcat 改为 provided scope
        -->
    </dependencies>

    <build>
        <!-- 设置构建的 war 包名 -->
        <finalName>dragon-dynamic-setting</finalName>
        <plugins>
            <!-- 打包 -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring-boot.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
